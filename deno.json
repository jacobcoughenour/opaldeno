{
	"compilerOptions": {
		"allowJs": true,
		"lib": ["deno.window"],
		"strict": true
	},
	"lint": {
		"files": {
			"include": ["src/"],
			"exclude": ["src/testdata/"]
		}
	},
	"fmt": {
		"files": {
			"include": ["src/"]
		},
		"options": {
			"useTabs": true,
			"lineWidth": 80,
			"indentWidth": 4,
			"singleQuote": false,
			"proseWrap": "preserve"
		}
	}
}
